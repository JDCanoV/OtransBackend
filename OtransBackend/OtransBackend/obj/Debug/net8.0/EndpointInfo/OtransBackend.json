{
  "openapi": "3.0.1",
  "info": {
    "title": "OtransBackend API",
    "description": "Backend: Jhoel Blanco, Oscar Paternina<br/>Frontend: Juliana Riaño, Diego Cano",
    "version": "v1"
  },
  "paths": {
    "/api/Test/check-connection": {
      "get": {
        "tags": [
          "Test"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/Login": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Autentica un usuario en el sistema.",
        "description": "Este endpoint permite a los usuarios registrados iniciar sesión utilizando sus credenciales.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/RecuperarContra": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Envía un correo de recuperación de contraseña.",
        "description": "Este endpoint envía un correo electrónico con instrucciones para que el usuario recupere su contraseña.",
        "parameters": [
          {
            "name": "correo",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/registrarViaje": {
      "post": {
        "tags": [
          "User"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ViajeDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ViajeDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ViajeDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/listarViaje": {
      "get": {
        "tags": [
          "User"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/registerTransportista": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Registra un nuevo transportista.",
        "description": "Registra un transportista con sus datos y licencia adjunta.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "Licencia": {
                    "type": "string",
                    "format": "binary"
                  },
                  "ArchiDocu": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/registerEmpresa": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Registra una nueva empresa.",
        "description": "Registra una empresa con sus datos y archivo de NIT.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "NitFile": {
                    "type": "string",
                    "format": "binary"
                  },
                  "ArchiDocu": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/registerVehiculo": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Registra un vehículo para un usuario.",
        "description": "Agrega un vehículo al perfil del usuario con SOAT, Tecnicomecanica y licencia de tránsito.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "Soat": {
                    "type": "string",
                    "format": "binary"
                  },
                  "Tecnicomecanica": {
                    "type": "string",
                    "format": "binary"
                  },
                  "LicenciaTransito": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/pendientes-validacion": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Obtiene usuarios pendientes de validación.",
        "description": "Devuelve la lista de usuarios que aún no han sido validados en el sistema.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UsuarioRevisionDto"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UsuarioRevisionDto"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UsuarioRevisionDto"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/User/detalle/{idUsuario}": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Obtiene el detalle de un usuario.",
        "description": "Recupera la información detallada de un usuario por su identificador.",
        "parameters": [
          {
            "name": "idUsuario",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/validar": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Valida un usuario.",
        "description": "Procesa la validación de documentos o datos de un usuario.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioValidacionDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioValidacionDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioValidacionDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/User/reupload-documentos": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Re-sube los documentos de un usuario.",
        "description": "Permite al usuario volver a subir sus documentos para validación.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "IdUsuario": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "Documentos": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/DocumentoReuploadDto"
                    }
                  }
                }
              },
              "encoding": {
                "IdUsuario": {
                  "style": "form"
                },
                "Documentos": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/WeatherForecast": {
      "get": {
        "tags": [
          "WeatherForecast"
        ],
        "operationId": "GetWeatherForecast",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DocumentoReuploadDto": {
        "type": "object",
        "properties": {
          "nombreDocumento": {
            "type": "string",
            "nullable": true
          },
          "archivo": {
            "type": "string",
            "format": "binary",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "DocumentoValidacionDto": {
        "type": "object",
        "properties": {
          "nombreDocumento": {
            "type": "string",
            "nullable": true
          },
          "esValido": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "correo": {
            "type": "string",
            "nullable": true
          },
          "contrasena": {
            "type": "string",
            "nullable": true
          },
          "respuesta": {
            "type": "integer",
            "format": "int32"
          },
          "mensaje": {
            "type": "string",
            "nullable": true
          },
          "token": {
            "type": "string",
            "nullable": true
          },
          "tiempoExpiracion": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "UsuarioRevisionDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nombre": {
            "type": "string",
            "nullable": true
          },
          "correo": {
            "type": "string",
            "nullable": true
          },
          "tipoUsuario": {
            "type": "string",
            "nullable": true
          },
          "fechaRegistro": {
            "type": "string",
            "format": "date-time"
          },
          "estado": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UsuarioValidacionDto": {
        "type": "object",
        "properties": {
          "idUsuario": {
            "type": "integer",
            "format": "int32"
          },
          "documentos": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DocumentoValidacionDto"
            },
            "nullable": true
          },
          "observaciones": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ViajeDto": {
        "type": "object",
        "properties": {
          "idViaje": {
            "type": "integer",
            "format": "int32"
          },
          "destino": {
            "type": "string",
            "nullable": true
          },
          "origen": {
            "type": "string",
            "nullable": true
          },
          "distancia": {
            "type": "number",
            "format": "double"
          },
          "fecha": {
            "type": "string",
            "format": "date-time"
          },
          "idEstado": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "idCarga": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "idTransportista": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "idEmpresa": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "peso": {
            "type": "number",
            "format": "double"
          },
          "tipo": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "tags": [
    {
      "name": "User",
      "description": "Operaciones relacionadas con la gestión de usuarios, incluyendo autenticación, registro y validación."
    }
  ]
}